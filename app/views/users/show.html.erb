<div class="row">
    <div class="col-md-3 text-center">
        <%= image_tag @user.profile.avatar.url(:thumb) %>
    </div>
    <div class="col-md-6">
        <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
        <h3><span class="job_title_icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
        <div class="well profile_block profile_description">
            <h3>Description</h3>
            <%= @user.profile.description %>
        </div>
        <div class="well profile_block contact_info">
            <% if true#current_user.plan_id == 2 %>
                <h3>Contact Info</h3>
                <%= @user.profile.phone_number %><br/>
                <%= @user.profile.contact_email %><br/>
            <% end %>
        </div>
    </div>
</div>